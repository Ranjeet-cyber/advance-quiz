<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="30sp" android:textStyle="bold" android:textColor="@color/red" android:gravity="center" android:id="@+id/timeUpText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/timeup"/>
    <ImageView android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="10dp" android:src="@drawable/ic_timer_black_24dp"/>
    <View android:layout_width="match_parent" android:layout_height="20dp"/>
    <Button android:textColor="@color/white" android:id="@+id/playAgainButton" android:background="@drawable/button_bg" android:layout_width="300dp" android:layout_height="wrap_content" android:text="PLAY AGAIN"/>
</LinearLayout>
